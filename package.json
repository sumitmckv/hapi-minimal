{
  "author": "Sumit Ghosh",
  "contributors": [
    "Sumit Ghosh <sumitmckv14@gmail.com>"
  ],
  "description": "Node demo project",
  "name": "node-starter",
  "version": "1.0.0",
  "engines": {
    "node": ">=10.0"
  },
  "scripts": {
    "tsc": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
    "format:lint": "./node_modules/.bin/tslint -c tslint.json 'src/**/*.ts'",
    "format:prettier": "./node_modules/.bin/prettier --tab-width 4 --print-width 120 --single-quote --trailing-comma all --write 'src/**/*.ts'",
    "postinstall": "npm run tsc"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "@hapi/hapi": "^20.2.2",
    "@hapi/joi": "^17.1.1"
  },
  "devDependencies": {
    "@types/hapi__hapi": "^20.0.12",
    "@types/hapi__joi": "^17.1.8",
    "@types/node": "^18.7.23",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.8.3"
  },
  "keywords": [
    "nodejs",
    "typescript"
  ]
}
